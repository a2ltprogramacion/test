---
// src/components/Header.astro
---
<header id="main-header" class="fixed w-full text-text-inverted top-0 z-50 transition-all duration-300">
  <nav class="container mx-auto flex justify-between items-center p-4">
    <div class="logo">
      <a href="/" class="text-2xl font-sans font-bold hover:text-accent transition-colors duration-300">Elevawod</a>
    </div>
    
    <!-- Desktop Menu -->
    <div class="hidden md:flex items-center space-x-6">
      <a href="/" class="hover:text-accent transition-colors duration-300">Inicio</a>
      <a href="/proyectos/" class="hover:text-accent transition-colors duration-300">Proyectos</a>
      <a href="/#servicios" class="hover:text-accent transition-colors duration-300">Servicios</a>
      <a href="/#nosotros" class="hover:text-accent transition-colors duration-300">Nosotros</a>
      <a href="/#contacto" class="hover:text-accent transition-colors duration-300">Contacto</a>
    </div>

    <a href="https://wa.me/56934833633" 
       target="_blank" 
       rel="noopener noreferrer" 
       class="hidden md:inline-block bg-[#25D366] text-white font-bold py-2 px-5 text-base transition-transform duration-300 hover:scale-105">
      WhatsApp
    </a>

    <!-- Mobile Menu Button -->
    <div class="md:hidden">
      <button id="mobile-menu-button" class="text-text-inverted focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile Menu (hidden by default) -->
  <div id="mobile-menu" class="hidden md:hidden bg-primary">
    <a href="/" class="block py-2 px-4 text-sm hover:bg-accent">Inicio</a>
    <a href="/proyectos/" class="block py-2 px-4 text-sm hover:bg-accent">Proyectos</a>
    <a href="/#servicios" class="block py-2 px-4 text-sm hover:bg-accent">Servicios</a>
    <a href="/#nosotros" class="block py-2 px-4 text-sm hover:bg-accent">Nosotros</a>
    <a href="/#contacto" class="block py-2 px-4 text-sm hover:bg-accent">Contacto</a>
    <a href="https://wa.me/56934833633" target="_blank" rel="noopener noreferrer" class="block py-2 px-4 text-sm hover:bg-accent">WhatsApp</a>
  </div>

  <script>
    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const header = document.getElementById('main-header');

    if (menuButton && mobileMenu) {
      menuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }

    if (header) {
      window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
          header.classList.add('bg-primary', 'shadow-md');
        } else {
          header.classList.remove('bg-primary', 'shadow-md');
        }
      });
    }
  </script>
</header>