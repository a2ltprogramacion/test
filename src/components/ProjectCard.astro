// Componente renovado para mostrar una tarjeta de proyecto con mejor estÃ©tica y efectos hover
import type { CollectionEntry } from 'astro:content';
export interface Props {
  project: CollectionEntry<'proyectos'>;
}

const { project } = Astro.props;
const { titulo, summary, gallery, image, client_name } = project.data;
const firstImage = image ??
(gallery?.length ? gallery[0].image_path : '/placeholder.png');
---

<a href={`/proyectos/${project.slug}`} class="group block overflow-hidden rounded-lg shadow-lg transition-shadow duration-300 hover:shadow-xl bg-white hover:no-underline">
  <div class="relative overflow-hidden">
    <img src={firstImage} alt={`Imagen del proyecto ${titulo}`} class="w-full h-56 object-cover transition-transform duration-300 ease-in-out group-hover:scale-105" />
    <div class="absolute inset-0 bg-primary bg-opacity-40 transition-opacity duration-300 group-hover:bg-opacity-60"></div>
    <div class="absolute top-4 left-4">
      <span class="text-xs font-bold bg-white/80 text-primary py-1 px-3 rounded-full backdrop-blur-sm">{client_name}</span>
    </div>
  </div>
  <div class="p-6">
    {/* ðŸ‘‡ CAMBIO CLAVE: AÃ±adimos clases para crear y animar el pseudo-elemento ::after */}
    <h3 class="
      font-serif text-2xl font-bold text-primary mb-2
      relative inline-block {/* Necesario para posicionar el pseudo-elemento correctamente */}
      
      after:content-[''] {/* Crea el pseudo-elemento */}
      after:absolute after:bottom-0 after:left-0 {/* Lo posiciona abajo a la izquierda */}
      after:w-full after:h-[2px] {/* Le da el tamaÃ±o de un subrayado */}
      after:bg-accent {/* Le da el color naranja */}
      
      after:origin-left {/* La animaciÃ³n comenzarÃ¡ desde la izquierda */}
      after:scale-x-0 {/* Estado inicial: escala horizontal de 0 (invisible) */}
      group-hover:after:scale-x-100 {/* Estado final: escala horizontal de 100% al hacer hover en la tarjeta */}
      after:transition-transform after:duration-300 after:ease-in-out {/* Define la animaciÃ³n */}
    ">
      {titulo}
    </h3>
    
    <p class="font-sans text-base text-gray-600 mb-4 line-clamp-3">{summary}</p>
    
    <div class="flex items-center text-accent font-bold">
      <span>Ver Caso de Ã‰xito</span>
      <span class="ml-2 transition-transform duration-300 group-hover:translate-x-2">â†’</span>
    </div>
  </div>
</a>