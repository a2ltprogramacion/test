---
// Componente renovado para mostrar una tarjeta de proyecto con mejor estética y efectos hover
import type { CollectionEntry } from 'astro:content';

export interface Props {
  project: CollectionEntry<'proyectos'>;
}

const { project } = Astro.props;
const { title, summary, gallery, image, client_name } = project.data;

// Obtener la primera imagen de la galería si existe, o una imagen de reemplazo
const firstImage = image ?? (gallery?.length ? gallery[0].image_path : '/placeholder.png');
---

<a href={`/proyectos/${project.slug}`} class="group block overflow-hidden rounded-lg shadow-lg transition-shadow duration-300 hover:shadow-xl bg-white">
  <div class="relative overflow-hidden">
    <img src={firstImage} alt={`Imagen del proyecto ${title}`} class="w-full h-56 object-cover transition-transform duration-300 ease-in-out group-hover:scale-105" />
    <div class="absolute inset-0 bg-primary bg-opacity-40 transition-opacity duration-300 group-hover:bg-opacity-60"></div>
    <div class="absolute top-4 left-4">
      <span class="text-xs font-bold bg-white/80 text-primary py-1 px-3 rounded-full backdrop-blur-sm">{client_name}</span>
    </div>
  </div>
  <div class="p-6">
    <h3 class="font-serif text-2xl font-bold text-primary mb-2">{title}</h3>
    <p class="font-sans text-base text-gray-600 mb-4 line-clamp-3">{summary}</p>
    <div class="flex items-center text-accent font-bold transition-colors duration-300 group-hover:text-primary">
      <span>Ver Caso de Éxito</span>
      <span class="ml-2 transition-transform duration-300 group-hover:translate-x-2">→</span>
    </div>
  </div>
</a>
